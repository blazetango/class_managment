<p id="notice"><%= notice %></p>

<h1> Attendence for <%= @batch.name %> </h1>

<table>
  <thead>
    <tr>
      <th>student</th>
      <th>date</th>
      <th></th>
       <th colspan="3"></th>
      <th>attendence details </th>
    </tr>
  </thead>

  <% #binding.pry%>
  <tbody>
    <% @attendences.each do |attend| %>
      <tr>
        <td><%= attend.student.first_name %></td>
        <td><%= attend.session_date %></td>
        <td>
          <td></td>
          <td>
          <%= simple_form_for attend, 
            url: update_attendance_path(id: attend.id),remote: true ,
            html: {class: 'form-inline'},
            method: :put do |f| %>

            <%=    f.input :attend, as: :boolean do f.check_box :attend, {}, "true", "false" end %>
          </td> 
          <td>
            <%= f.input :remarks %>
          </td>      
          <td>        
            <%= f.submit %>
          </td>
          <% end %>
        </td>  
        </td>
        
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "return to batch", batch_path(@batch)%>
<br>

